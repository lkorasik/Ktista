<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin"
        android:textAlignment="center"
        android:textSize="@dimen/reg_login_text_size"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="@string/dialog_old_password"
        android:inputType="textPassword"
        android:layout_margin="@dimen/base_margin"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="@string/dialog_new_password"
        android:inputType="textPassword"
        android:layout_margin="@dimen/base_margin"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/repeat_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="@string/dialog_new_password"
        android:inputType="textPassword"
        android:layout_margin="@dimen/base_margin"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"/>

</LinearLayout>