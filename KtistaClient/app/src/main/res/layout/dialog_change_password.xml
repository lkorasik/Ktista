<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    tools:context="ui.settings.ChangePasswordDialog">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginTop="@dimen/dialog_border_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginBottom="@dimen/base_margin"
        android:fontFamily="@font/montserrat"
        android:text="@string/dialog_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_title_text_size" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/dialog_vertical_extended_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:hint="@string/dialog_old_password"
        android:inputType="textPassword"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/dialog_vertical_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:hint="@string/dialog_new_password"
        android:inputType="textPassword"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/repeat_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/dialog_vertical_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:hint="@string/dialog_confirm_password"
        android:inputType="textPassword"
        android:minHeight="@dimen/registration_edit_text_min_height"
        android:singleLine="true"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/dialog_button_vertical_margin"
        android:layout_marginBottom="@dimen/dialog_border_margin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            style="@style/SecondaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            android:layout_weight="1"
            android:text="@string/dialog_cancel"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/dialog_change"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
