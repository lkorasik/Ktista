<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|end"
    android:orientation="horizontal"
    android:weightSum="6"
    tools:showIn="@layout/fragment_post">

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cd_post_like"
        app:srcCompat="@drawable/ic_like" />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:maxLength="4"
        android:textSize="@dimen/base_feed_text_size" />

    <ImageView
        android:id="@+id/iv_dislike"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cd_post_dislike"
        app:srcCompat="@drawable/ic_dislike" />

    <TextView
        android:id="@+id/tv_dislike_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:maxLength="4"
        android:textSize="@dimen/base_feed_text_size" />

    <ImageView
        android:id="@+id/iv_comments"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cd_post_comments"
        app:srcCompat="@drawable/ic_comment" />

    <TextView
        android:id="@+id/tv_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:maxLength="4"

        android:textSize="@dimen/base_feed_text_size" />


</LinearLayout>




