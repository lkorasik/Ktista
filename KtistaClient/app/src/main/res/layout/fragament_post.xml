<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:weightSum="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_TopBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/radius_avatar_post"
                android:layout_height="@dimen/radius_avatar_post"
                android:layout_margin="10dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TV_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="TV_user_name">

                </TextView>

                <TextView
                    android:id="@+id/TV_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV_login" />
            </LinearLayout>

            <include layout="@layout/icons_feed_widget" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2">

        </TextView>


        <ImageView
            android:id="@+id/IV_photo_post"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:adjustViewBounds="true"
            android:contentDescription="@string/post_photo"
            android:scaleType="centerCrop">

        </ImageView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>