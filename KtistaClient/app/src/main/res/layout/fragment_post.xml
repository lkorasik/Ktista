<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/ll_post_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci_post_avatar"

                android:layout_width="@dimen/radius_avatar_post"
                android:layout_height="@dimen/radius_avatar_post"
                android:layout_margin="10dp">

            </de.hdodenhof.circleimageview.CircleImageView>


            <LinearLayout
                android:id="@+id/ll_names"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:textSize="@dimen/base_feed_text_size">

                </TextView>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:maxLines="3"
                    android:textSize="@dimen/sec_feed_text_size" />

            </LinearLayout>


            <include layout="@layout/widget_icons_feed" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="70dp"
            android:paddingTop="6dp"
            android:paddingEnd="60dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/base_feed_text_size">

        </TextView>

        <ImageView
            android:id="@+id/iv_post_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/post_photo"
            android:scaleType="centerCrop">

        </ImageView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>