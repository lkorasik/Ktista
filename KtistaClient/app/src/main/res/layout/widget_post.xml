<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <include
        layout="@layout/widget_user"
        android:layout_width="match_parent"
        android:layout_height="60dp" />


    <ImageView
        android:id="@+id/iv_post_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cd_post_photo"
        android:scaleType="centerCrop" />

    <include
        layout="@layout/widget_icons_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="2"
        android:paddingHorizontal="20dp"
        android:paddingBottom="5dp"
        android:text="4324243423432423sffsfgfgfgjflgjlsdjglsdfjglfsdgjldgjlgj
gfdgdgdsgfgdgsdgfdgfdg"
        android:textColor="@color/black"
        android:textSize="@dimen/base_feed_text_size" />

    <TextView
        android:id="@+id/tv_show_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="@string/show_comments"
        android:textSize="@dimen/base_feed_text_size"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="date"
        android:textSize="10sp"
        tools:ignore="SmallSp"/>



</LinearLayout>


