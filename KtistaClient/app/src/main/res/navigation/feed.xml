<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed"
    app:startDestination="@+id/navigation_feed">

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.lkorasik.ktistaclient.ui.feed.FeedFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_navigation_feed_to_addPostActivity"
            app:destination="@id/addPostActivity" />
    </fragment>
    <activity
        android:id="@+id/addPostActivity"
        android:name="com.lkorasik.ktistaclient.ui.feed.addPost.AddPostActivity"
        android:label="AddPostActivity"
        tools:layout="@layout/activity_add_post"/>

</navigation>
