<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#E09777"
                android:endColor="#FAEAD3"
                android:angle="180"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="50dp"/>
            <solid android:color="@color/white" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="22dp"
                android:right="22dp"/>
        </shape>
    </item>

</layer-list>