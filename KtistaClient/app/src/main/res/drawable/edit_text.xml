<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/base_skin"
                android:endColor="@color/gradient_end"
                android:angle="@dimen/gradient_angle"/>
            <corners android:radius="@dimen/edittext_radius"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/edittext_margin"
        android:left="@dimen/edittext_margin"
        android:right="@dimen/edittext_margin"
        android:top="@dimen/edittext_margin">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/edittext_radius"/>
            <solid android:color="@color/white" />
            <padding
                android:bottom="@dimen/edittext_vertical_padding"
                android:top="@dimen/edittext_vertical_padding"
                android:left="@dimen/button_horizontal_padding"
                android:right="@dimen/button_horizontal_padding"/>
        </shape>
    </item>
</layer-list>